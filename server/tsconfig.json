{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@service/*": ["./src/service/*"],
      "@models/*": ["./src/models/*"],
      "@helpers/*": ["./src/helpers/*"],
    },
  },
  "include": ["src", "src/__test__"],
}
